{
  "$schema": "https://schemas.conda.org/menuinst/menuinst-1-1-0.schema.json",
  "menu_name": "Pixi GUI",
  "menu_items": [
    {
      "name": "Pixi GUI",
      "description": "Graphical user interface for Pixi",
      "icon": "{{ MENU_DIR }}/icon.{{ ICON_EXT }}",
      "activate": true,
      "command": [""],
      "platforms": {
        "linux": {
          "command": ["{{ PREFIX }}/bin/pixi-gui", "%f"],
          "StartupNotify": true,
          "MimeType": ["application/toml"],
          "StartupWMClass": "pixi-gui"
        },
        "osx": {
          "CFBundleVersion": "__PKG_VERSION__",
          "command": ["{{ PREFIX }}/bin/pixi-gui", "$@"],
          "CFBundleDocumentTypes": [
            {
              "CFBundleTypeName": "dev.prefix.pixi-gui.toml",
              "CFBundleTypeRole": "Editor",
              "LSItemContentTypes": ["dev.prefix.pixi-gui.toml-uti"],
              "LSHandlerRank": "Alternate"
            }
          ],
          "UTExportedTypeDeclarations": [
            {
              "UTTypeConformsTo": [
                "public.data",
                "public.content",
                "public.sourceCode"
              ],
              "UTTypeIdentifier": "dev.prefix.pixi-gui.toml-uti",
              "UTTypeTagSpecification": {
                "public.filename-extension": ["toml"]
              }
            }
          ]
        },
        "win": {
          "command": ["{{ PREFIX }}/bin/pixi-gui", "%1"],
          "file_extensions": [".toml"]
        }
      }
    }
  ]
}
